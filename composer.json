{
  "name": "drd-plus/bestiary-dm",
  "license": "MIT",
  "type": "library",
  "description": "Drd+ rules for DM personal bestiary",
  "keywords": [
    "Drd plus",
    "rules",
    "handbook",
    "dm",
    "bestiary"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/string": "dev-master",
    "drd-plus/rules-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "^1.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "mkdir --parents DrdPlus/Tests",
      "rm -f DrdPlus/Tests/RulesSkeleton && ln -s ../../vendor/drd-plus/rules-skeleton/DrdPlus/Tests/RulesSkeleton DrdPlus/Tests",
      "cp --no-clobber vendor/drd-plus/rules-skeleton/phpunit.xml.dist $PWD",
      "rm -fr ./css/generic && cp -r ./vendor/drd-plus/rules-skeleton/css/generic ./css/generic",
      "rm -f ./images/generic && ln -s ../vendor/drd-plus/rules-skeleton/images/generic ./images/generic",
      "rm -f ./js/generic && ln -s ../vendor/drd-plus/rules-skeleton/js/generic ./js/generic",
      "find ./cache -mindepth 2 -type f -exec rm {} +"
    ],
    "post-update-cmd": [
      "php ./vendor/bin/assets --css --dir=css"
    ],
    "post-install-cmd": [
      "php ./vendor/bin/assets --css --dir=css",
      "wget https://bestiar.ppj.drdplus.info --background --output-document=- --output-file=/dev/null >> /dev/null"
    ]
  }
}
