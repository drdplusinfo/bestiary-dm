{
  "name": "drdplus/bestiary-dm",
  "license": "MIT",
  "type": "library",
  "description": "Drd+ rules for DM personal bestiary",
  "keywords": [
    "Drd plus",
    "rules",
    "handbook",
    "dm",
    "bestiary"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "drdplus/rules-skeleton": "^1.5"
  },
  "require-dev": {
    "composer/composer": "^1.8",
    "granam/exceptions-hierarchy": "^5.0",
    "mockery/mockery": "^1.2",
    "phpunit/phpunit": "^8.3",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/RulesSkeleton && ln -s ../../vendor/drdplus/rules-skeleton/DrdPlus/Tests/RulesSkeleton DrdPlus/Tests/"
    ]
  }
}
